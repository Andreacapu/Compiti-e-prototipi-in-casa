lista_mia = ["margherita", "napoli", "amatriciana"]

lista_amico = lista_mia[:]

lista_mia.append ("diavola")

lista_amico.append ("marinara")

print("le mie pizze preferite sono:")

for pizza in lista_mia:

    print(f"    + {pizza}")


print("le pizze preferite del mio amico sono:")

for pizza in lista_amico:
    
    print(f"    + {pizza}")
